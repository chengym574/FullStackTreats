<%= render 'shared/navbar' %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-4">Edit Contact Page</h1>

  <%= form_tag update_contact_path, method: :patch, class: "w-full max-w-lg" do %>
    <%= text_area_tag :contact_content, @contact_content, class: "border border-gray-300 px-3 py-2 rounded focus:outline-none w-full mb-4" %>
    <%= submit_tag 'Update', class: "bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 focus:outline-none" %>
  <% end %>
</div>
