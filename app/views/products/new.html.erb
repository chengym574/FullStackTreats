<%= render 'shared/navbar' %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-4">New Product</h1>

  <%= form_with(model: @product, local: true, data: { turbo: false }) do |form| %>
    <% if @product.errors.any? %>
      <div id="error_explanation" class="bg-red-100 text-red-700 p-4 rounded mb-4">
        <h2 class="text-lg font-semibold mb-2"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: "block font-semibold mb-1" %>
      <%= form.text_field :name, class: "border border-gray-300 px-3 py-2 rounded focus:outline-none w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block font-semibold mb-1" %>
      <%= form.text_area :description, class: "border border-gray-300 px-3 py-2 rounded focus:outline-none w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :price, class: "block font-semibold mb-1" %>
      <%= form.text_field :price, class: "border border-gray-300 px-3 py-2 rounded focus:outline-none w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :category_id, class: "block font-semibold mb-1" %>
      <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select Category" }, class: "border border-gray-300 px-3 py-2 rounded focus:outline-none w-full" %>
    </div>

    <div class="mb-4">
      <%= form.submit "Create Product", class: "bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 focus:outline-none" %>
    </div>
  <% end %>
</div>
